USER_SOURCES = source.c
EXECUTABLE = BSP.out
###################################
SOURCE_DIR = src
OBJECT_DIR = build
BINARY_DIR = bin
EXTERN_DIR = ext
###################################
CC = gcc
LINK = gcc
CFLAGS = -std=c99 -I $(EXTERN_DIR)/multicorebsp-for-c/

LIBS = -L/$(EXTERN_DIR)/multicorebsp-for-c/lib/libmcbsp1.2.0.a

SOURCES = $(USER_SOURCES:%.c=$(SOURCE_DIR)/%.c)
OBJECTS = $(USER_SOURCES:%.c=$(OBJECT_DIR)/%.o) $(EXTERN_DIR)/multicorebsp-for-c/*.o

BINARY = $(BINARY_DIR)/$(EXECUTABLE)

all: $(BINARY) $(DLLS) $(OBJECTS)

echo_objects:
	@echo $(OBJECTS)

echo_sources:
	@echo $(SOURCES)

$(BINARY): $(OBJECTS)
	$(LINK) $(OBJECTS) -lpthread -lc -lrt $(LIBS) -o $(BINARY)

$(OBJECT_DIR)/%.o: $(SOURCE_DIR)/%.c
	$(CC) $(CFLAGS) -c -o $@ $<

clean:
	find ./$(BINARY_DIR)/ -name \*.out -type f -delete
	find ./$(OBJECT_DIR)/ -name \*.o -type f -delete